<div class="task-butt">
  <div class="btn-group">
        <a class="btn-large btn-info btn" data-toggle="modal" href="#schedule"><i class="icon-calendar icon-white"></i> Schedule</a>
        <%= link_to '<i class="icon-time icon-white"></i> Skip for now'.html_safe, '#task-section', :class => 'btn-large btn-warning btn', :id => 'skip', :method => 'get' %>       
        <%= link_to '<i class="icon-ok icon-white"></i> I did it!'.html_safe, completed_path(@random.id), :class => 'btn-large btn-success btn', :id => 'done' %>  
        <%= link_to '<i class="icon-pencil icon-white"></i> Create a new task'.html_safe, new_task_path, :class => 'btn-large btn-info btn' %>
    </div>       
<!-- //////////////////// schedule modal //////////////// -->
  <div id="schedule" class="modal hide fade">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal">&times;</button>
      <h3>Schedule a reminder</h3>
    </div>
    <div class="modal-body">
      <%= form_tag(reminder_path(@random.id), :action => :post) do%>  
        <%= text_field_tag(:date, "Click to pick a reminder date", {:id => "pick_date", :dateFormat => "yy-mm-dd"}) %>
        <br />
        <label>Remind me by text message</label><%= check_box_tag 'text' %>
        <br />
        <br />
        <label>Remind me by email</label><%= check_box_tag 'email' %>
        <br />
        <%= submit_tag 'Set my reminder!', :class => 'btn-large btn-success btn', :id => 'scheduled' %>
      <% end %>
    </div>
    <div class="modal-footer">
      <a href="#" class="btn" data-dismiss="modal" >Close</a>
    </div>
  </div>
</div>
