      $("#warnings").show();
    });

    $("#remove-warnings").click(function(e){
     $("#warnings").hide();
    });

    $("#bans-trigger").click(function(e){
      $("#bans").show();
    });

    $("#remove-bans").click(function(e){
     $("#bans").hide();
